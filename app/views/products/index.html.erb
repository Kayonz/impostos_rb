<p id="notice" class="alert alert-info"><%= notice %></p>

<div class="container">
  <h1 class="my-4">Products</h1>

  <table class="table">
    <thead class="table-dark">
      <tr>
        <th>Nome Produto</th>
        <th>Valor</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.nomeProduto %></td>
          <td><%= product.valor %></td>
          <td><%= link_to 'Mostrar', product, class: 'btn btn-primary btn-sm' %></td>
          <td><%= link_to 'Editar', edit_product_path(product), class: 'btn btn-secondary btn-sm' %></td>
          <td><%= link_to 'Apagar', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Criar prod', new_product_path, class: 'btn btn-success' %>
</div>
